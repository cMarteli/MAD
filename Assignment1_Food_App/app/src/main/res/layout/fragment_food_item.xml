<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/list_food_img"
        android:layout_width="250dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?android:attr/colorFocusedHighlight" />

    <TextView
        android:id="@+id/list_food_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item name"
        app:layout_constraintStart_toEndOf="@+id/list_food_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_food_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/list_food_img"
        app:layout_constraintTop_toBottomOf="@id/list_food_name_txt"
        android:text="@string/price_placeholder"/>

    <TextView
        android:id="@+id/list_food_amount_txt"
        app:layout_constraintStart_toEndOf="@+id/list_food_img"
        app:layout_constraintTop_toBottomOf="@id/list_food_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: 0"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/list_food_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_food_remove_btn"
        app:srcCompat="@android:drawable/ic_input_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/list_food_remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_food_img"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/list_food_img"
        android:background="?android:attr/listDivider"/>

</androidx.constraintlayout.widget.ConstraintLayout>