<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerViewPhot"
        android:name="curtin.edu.prac7.ThumbnailFragment"
        android:layout_width="389dp"
        android:layout_height="340dp"
        app:layout_constraintBottom_toTopOf="@+id/divider_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerViewInputs"
        android:name="curtin.edu.prac7.InputFragment"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/next_btn"
        app:layout_constraintTop_toBottomOf="@+id/divider_center"
        tools:layout_editor_absoluteX="2dp" />

    <View
        android:id="@+id/divider_center"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="2dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="2dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>